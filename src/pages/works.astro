---
import '../styles/pages/works.css';
import SiteLayout from '../layouts/SiteLayout.astro';
---

<SiteLayout title="Works | Josselin Didek" pageId="works" namespace="works">
  <section class="works-placeholder">
    <h1>[ WORKS ]</h1>
    <p>Coming soon.</p>
  </section>

  <style is:global>
    .works-placeholder {
      position: relative;
      z-index: 5;
      min-height: 100vh;
      min-height: 100svh;
      display: grid;
      place-content: center;
      text-align: center;
      gap: 12px;
      color: rgba(255, 255, 255, 0.9);
      text-shadow: 0 0 4px rgba(255, 255, 255, 0.75);
      letter-spacing: 1px;
    }

    .works-placeholder h1 {
      margin: 0;
      font-size: 16px;
      font-weight: 300;
    }

    .works-placeholder p {
      margin: 0;
      font-size: 11px;
      opacity: 0.8;
    }
  </style>
</SiteLayout>
